{
  "display_information": {
    "name": "FinStack AI"
  },
  "features": {
    "bot_user": {
      "display_name": "FinStackAI",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",         // send messages as the bot
        "chat:write.public",  // post to public channels it's not in yet
        "channels:join",      // auto-join channels before posting
        "channels:read",      // (optional) list/find channels
        "im:write",           // open DMs via conversations.open
        "users:read",         // list users (for mapping IDs, etc.)
        "users:read.email"    // (optional) map users by email
      ]
    }
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "is_hosted": false,
    "token_rotation_enabled": false
  }
}
